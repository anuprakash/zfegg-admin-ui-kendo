<?php
$path    = __DIR__ . '/../dist/index.html';

$basePath = $this->serverUrl(rtrim($this->basePath(), '/') . '/');

$html = file_get_contents($path);
$html = str_replace('%BASE_HREF%', $basePath, $html);
if (isset($modules)) {
    $html = str_replace('/*%APP_MODULES%*/', trim(json_encode($modules), '[]'), $html);
}

echo $html;
